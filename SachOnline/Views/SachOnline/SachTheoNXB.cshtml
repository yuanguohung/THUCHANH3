
@{
    ViewBag.Title = "SachTheoNXB";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 class="text-center">SÁCH THEO NHÀ XUẤT BẢN</h2>
<hr>
<div class="row text-center">
    <div class="row text-center">
        @foreach (var sach in Model)
        {
            <div class="col-sm-4 col-lg-4 col-xs-6">
                <div class="thumbnail">
                    <img src="~/Images/@sach.anhSP" alt="Thumbnail Image 1" class="img- responsive img-rounded imgbook " style="width:250px; height:350px" />
                    <div class="caption">
                        <h4 style="min-height:70px;">
                            <a href="@Url.Action("ChiTietSach","SachOnline", new { id =sach.sach_id})">@sach.ten_sach</a>
                        </h4>
                        <p>
                            <a href="#" class="btn btn-primary" role="button">
                                <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Add to Cart
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

